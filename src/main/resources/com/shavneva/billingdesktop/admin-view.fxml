                  <Button mnemonicParsing="false" onAction="#generateUserReport" prefHeight="42.0" prefWidth="274.0" text="Получить отчёт" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
